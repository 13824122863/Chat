<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical" android:orientation="horizontal"
    android:padding="10dip">

    <ImageView
        android:id="@+id/user_icon" android:layout_width="30dip"
        android:layout_height="30dip" android:background="@drawable/account_icon"/>

    <TextView
        android:id="@+id/user_name" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="123123"
        android:textSize="17dip"/>

</LinearLayout>
